<div class="main-container">
  <div class="card-container">
    <div class="row-cat text-center">
      <h2>All Cats</h2>
    </div>
    <div class="row-cat">
      <% @cats.each do |cat| %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to cat_path(cat) do %>
            <div class="card">
            <figure  class="card__image">
              <img src="<%= cl_image_path(cat.photo, height: 300, width: 400, crop: :fill) %>" alt="Short description">
            </figure>
            <div class="card__body">
              <h3 class=""><%= cat.name %></h3>
              <h4 class=""><% cat.breed %></h4>
              <h6 class=""><%= cat.price_per_day %> â‚¬/day </h6>
              <h5 class="card__footer"><%= cat.address %></h5>

            </div>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div id='map' data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_ACCESS_TOKEN'] %>"></div>
</div>



<%= javascript_pack_tag 'map' %>
