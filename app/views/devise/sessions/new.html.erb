<div class="container col-xs-12 col-md-4 col-md-offset-4 text-center">

  <div class="form_card">
    <h2>Sign in</h2>

      <div class="form-inputs form-inputs-sign">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email,
                    placeholder: 'Email',
                    label: false,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    placeholder: 'Password',
                    label: false,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <hr></hr>
      <div class="form-actions text-center">
        <%= f.button :submit, "Log in", class: 'btn btn-primary btn-log' %>
      </div>
    <% end %>

    <div class="devise "><%= render "devise/shared/links" %></div>
  </div>
</div>
