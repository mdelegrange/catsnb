<div class="container">
  <div class="row">
    <h1>Bonjour <%= current_user.first_name %></h1>
    <div class="tabs">
      <%= link_to owner_cats_path, class: "tab" do  %>
        <h2>My cats</h2>
      <% end %>
      <%= link_to owner_bookings_path, class: "tab" do  %>
        <h2>My bookings</h2>
      <% end %>
      <%= link_to bookings_path, class: "tab" do  %>
        <h2>My rented cats</h2>
      <% end %>
      <%= link_to profile_path, class: "tab active" do  %>
        <h2>My profile</h2>
      <% end %>
    </div>
  <% if current_user.photo.present? %>
    <%= cl_image_tag(current_user.photo, height: 300, width: 300, crop: :fill, alt: "user avatar",  class: "img-circle")%>
  <% else %>
    <%= image_tag "user.png", alt: "user avatar", height: 300, class: "img-circle"%>
  <% end %>

  <h1><%= @user.first_name %><%= @user.last_name %></h1>
  <p>Address: <%= @user.address %></p>
  <p>Email: <%= @user.email %></p>
  <p>Phone: <%= @user.phone %></p>
  <p>Gender: <%= @user.sex %></p>
  <p>Birth Date: <%= @user.birth_date %></p>

  <%= link_to 'Edit', edit_profile_path %>
</div>
</div>
