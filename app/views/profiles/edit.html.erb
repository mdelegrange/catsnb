<div class="container col-xs-12 col-md-4 col-md-offset-4">
  <h2>Edit <%= @user.first_name %></h2>
  <%= simple_form_for(@user, url: profile_path) do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :sex, collection: [ "M", "F"] %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>
