<div class="container col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
  <div class="form_card">
    <h2>Add a cat</h2>
   <%= simple_form_for([:owner, @cat]) do |f| %>
    <%= f.input :name, label: false, placeholder: 'Name' %>
    <%= f.input :breed, label: false, placeholder: 'Breed' %>
    <%= f.input :description, label: false, placeholder: 'Description' %>
    <%= f.input :birth_date, as: :string, required: false, input_html: {class: "datepicker-birth"}, label: false, placeholder: 'Birth date' %>
    <%= f.input :address, label: false, placeholder: 'Address' %>
    <div class="complex-input">
      <%= f.input :price_per_day, label: false, placeholder: 'Price per day' %>
      <p class="euro">â‚¬</p>
    </div>

    <div class="complex-input">
      <label for="cat_photo" class="add-photo">
        <%= image_tag "picture.png",height: 35, width: 35, crop: :fill, alt: "picture-cat"%>
        <p class="add_photo_text">Add picture</p>
    <%= f.input :photo, label: false, input_html: { class: "hidden" } %>
      </label>
    </div>
    <div class="cta text-center">
    <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
